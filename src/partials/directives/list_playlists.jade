ul
  li(ng-repeat="playlist in playlists")
    h3 
      | {{playlist.name}} 
      span / Duration: {{playlist.duration | timeConversion }}

    ul.tracks
      li(ng-repeat="track in playlist.tracks")
        img(ng-src="{{track.album.images[2].url}}")
        div.info
          h3 {{track.name}}
          p {{track.artists[0].name}}
          p Duration: {{track.duration_ms | timeConversion }}
          p Popularity: {{track.popularity}}