div#modal_playlist(ng-show="playlist")
	span.mask(ng-click="close()")
	div.content
		.centralize
			form(ng-submit="save_playlist()")
				fieldset
					label Name:
					input(type="text", ng-model="playlist.name" placeholder="Ex: Mood Booster")
				fieldset
					label Tags:
					input(type="text", ng-model="playlist.tags" placeholder="Ex: weekend, house, holyday")
				fieldset
					button Save
					a(ng-click="close()") Cancel